Subject: [PATCH] Revert "build-sys: make man/systemd.directives.xml depend on
 man/custom-entities.ent"

This reverts commit 747ca69b5d984b130c4b983281f9b51f3b710340.

https://github.com/systemd/systemd/issues/215
---
 Makefile.am | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/Makefile.am b/Makefile.am
index 1dd6dbd..ae3ec6b 100644
--- a/Makefile.am
+++ b/Makefile.am
@@ -717,9 +717,9 @@ man/systemd.index.xml: $(top_srcdir)/tools/make-man-index.py $(NON_INDEX_XML_FIL
 	$(AM_V_at)$(MKDIR_P) $(dir $@)
 	$(AM_V_GEN)$(PYTHON) $< $@ $(filter-out $<,$^)
 
-man/systemd.directives.xml: $(top_srcdir)/tools/make-directive-index.py man/custom-entities.ent $(SOURCE_XML_FILES)
+man/systemd.directives.xml: $(top_srcdir)/tools/make-directive-index.py $(SOURCE_XML_FILES)
 	$(AM_V_at)$(MKDIR_P) $(dir $@)
-	$(AM_V_GEN)$(PYTHON) $< $@ $(SOURCE_XML_FILES)
+	$(AM_V_GEN)$(PYTHON) $< $@ $(filter-out $<,$^)
 
 CLEANFILES += \
 	man/systemd.index.xml \
